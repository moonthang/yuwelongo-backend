<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <!-- Define Persistence Unit -->
  <persistence-unit name="persistencia" transaction-type="JTA">
    <jta-data-source>jdbc/__yuwe</jta-data-source>
    <class>logica.Usuario</class>
    <class>logica.Juego</class>
    <class>logica.Palabra</class>
    <class>logica.Favorito</class>
    <class>logica.PreguntaJuego</class>
    <class>logica.Categoria</class>
    <class>logica.NivelJuego</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
